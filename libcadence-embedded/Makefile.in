SHELL=/bin/sh
SCRIPT_PATH=@prefix@/share/cadence-embedded/scripts
LIB_PATH=@prefix@/lib

default:: cadence

cadence::
	cd src; make

install:: cadence
	install -d "$(LIB_PATH)" "$(SCRIPT_PATH)"
	install -m 755 libcadence-embedded.so "$(LIB_PATH)"
	cd ./scripts; make install
	cd ./include; make install


clean::
	cd src; make clean
